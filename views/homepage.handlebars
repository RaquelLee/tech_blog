<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title center">
          <h3><i class="fas fa-book-reader"></i> 
          Read & Write with Tech Blog Members 
          <i class="fas fa-feather-alt"></i></h3>
        </span>
        {{#each posts as |post|}}
        <div class="section">
          <a href="/post/{{post.id}}">
            <h5>{{post.title}}</h5></a>
          <p class="right">
            {{format_date post.date_created}} by 
            <b>{{user.name}}</b></p>
        </div>
        <div class="divider"></div>
        {{/each}}
      </div>
    </div>
  </div>
</div>