<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Create a Post</span>
        <form action='post_create' method="POST">
          <div class="input-field">
            <label for="name">Title:</label>
            <input id="postTitle" type="text" name="create_post_title">
          </div>
          <div class="input-field">
            <label for="textarea1">Contents:</label>
            <textarea id="postContent" class="materialize-textarea" name="create_post_desc"></textarea>
          </div>
        </form>
        <button class="btn" type="submit" id="create">Create</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/post.js"></script>