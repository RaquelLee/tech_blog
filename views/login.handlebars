<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Log In</span>
        <form>
          <div class="input-field">
            <label for="email">Email</label>
            <input class="validate" type="email" id="email-login"/>
          </div>
          <div class="input-field">
            <label for="password">Password</label>
            <input class="validate" type="password" id="password-login"/>
          </div>
        </form>
        <button class="btn" type="submit" id="login">Login</button>
        <a class="right" href="../signup">New user? Click here to sign up!</a>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>